pipeline {
  agent {
  label 'slave1'
  }
  stages {
    stage('Cloning Git') {
      steps {
        checkout scm
      }
	}
	
	 stage('Deploying App to Kubernetes') {

        steps {
               sshagent(['k8s-master']) {
             sh "scp -o StrictHostKeyChecking=no  k8s-deployment-service-manifest-file.yaml  ubuntu@52.87.212.156:/home/ubuntu"
              sh "ssh -o StrictHostKeyChecking=no ubuntu@52.87.212.156 'kubectl apply -f k8s-deployment-service-manifest-file.yaml ' "
           
                    
            }
      
      }
    }
	
  }
} 
