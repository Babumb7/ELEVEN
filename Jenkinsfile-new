pipeline {
    // add your slave label name
    agent { label 'my_maven_slave'}
    tools{
        maven 'maven-test'
    }
    stages {
        stage ('Checkout SCM') {

            steps {
          	    
	     checkout scm
            }
        }

        stage ('Build') {

            steps {
               sh 'mvn package'
            }
        }
        
        stage ('deploy') {

            steps {
               // update your tomcat server ip accordingly in below command
		    echo "deploying on tomcat server"
               sh "cp -r /var/lib/jenkins/workspace/deployment/target/maven-web-application.war /opt/tomcat9/webapps/"
                    
            }
        }

        
    }
}
